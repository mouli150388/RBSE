<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dsw.DSWActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/ic_video_che_background" />
   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        android:rotation="245"
        app:srcCompat="@drawable/dsw_test" />-->

    <!-- <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         app:cardBackgroundColor="@color/transparent"
         android:layout_height="match_parent">-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"

        >
        <!-- <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:src="@drawable/ic_left_arrow"
                android:tint="@color/dsw_color"></ImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                android:elevation="@dimen/_40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    >
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="2dp"

                        android:paddingLeft="@dimen/_5dp"
                        android:paddingRight="@dimen/_5dp"
                        android:text="@string/dsw_str1"
                        android:textColor="@color/dsw_color"
                        android:textSize="@dimen/_32dp"
                        android:textStyle="bold" />
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_2dp"
                        android:lineSpacingExtra="2dp"

                        android:padding="@dimen/_5dp"
                        android:text="@string/ascolorshipprgm"
                        android:textColor="@color/dsw_color_subtitl"
                        android:textSize="@dimen/_10sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:elevation="@dimen/_32dp"
                    android:src="@drawable/ic_dsw_logo" />

            </LinearLayout>

            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_dsw_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                android:layout_marginTop="@dimen/_16dp"
                android:fontFamily="@font/opensans_regular"

                android:text="@string/youareselected"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_dsw_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                android:letterSpacing=".02"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/dsw_congrats_color"
                android:text="@string/congratulations"
                android:textSize="@dimen/_28sp"
                android:textStyle="bold" />
            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_dsw_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_16sp"
                android:letterSpacing=".02"
                android:layout_marginRight="@dimen/_16sp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/dsw_congrats_color"
                android:text=""
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_90dp"
                android:layout_height="@dimen/_90dp"
                android:src="@drawable/ic_thumbs_up"
                />
            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:lineSpacingExtra="2dp"

                android:padding="@dimen/_5dp"
                android:text="@string/youscored"
                android:textColor="@color/dsw_color_subtitl"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                android:gravity="center"
                android:elevation="@dimen/_8dp"
                android:paddingTop="@dimen/_10dp"
                android:background="@drawable/ic_percent_discount"
                android:layout_height="match_parent">
                <com.tutorix.tutorialspoint.views.CustomTextview
                    android:id="@+id/txt_selecteddiscount"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_10dp"

                    android:gravity="center"
                    android:textSize="@dimen/_22sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:text="@string/discountsctring"
                    android:layout_height="match_parent" />
                <com.tutorix.tutorialspoint.views.CustomTextview
                    android:layout_below="@+id/txt_selecteddiscount"
                    android:id="@+id/txt_call"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10dp"

                    android:padding="@dimen/_10dp"

                    android:gravity="center"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/dsw_color_sub"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:text="@string/call_on"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shadow"
                android:gravity="center"
                android:minHeight="@dimen/_35dp"
                android:layout_margin="@dimen/_16sp"
                android:text="@string/downloadyourdsw"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp" />


        </LinearLayout>
        <!--  </androidx.cardview.widget.CardView>-->


    </ScrollView>


</RelativeLayout>