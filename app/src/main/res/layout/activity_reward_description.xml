<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/reward_bg"
    tools:context=".dsw.RewardsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:title="@string/howtowinrewards"
            app:navigationIcon="@drawable/ic_left_arrow"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
android:layout_below="@+id/appbar"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/_10dp"
            android:layout_margin="@dimen/_15dp"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/howtowinrewards"
                android:visibility="gone"
                android:textColor="@color/rewardwincolor"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:background="@color/transparent"
                android:textSize="@dimen/_16sp"
                android:fontFamily="@font/opensans_regular"
                />
            <LinearLayout
                    android:layout_width="match_parent"

                    android:orientation="vertical"

                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_height="wrap_content" >
                    <ImageView
                        android:layout_width="@dimen/_64dp"
                        android:layout_height="@dimen/_64dp"
                        android:src="@drawable/ic_gold"
                        android:minHeight="@dimen/_48dp"
                        android:layout_marginRight="@dimen/_10dp"
                        />
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:id="@+id/txt_goildcoins"
                        android:text="Gold Coins "
                        android:fontFamily="@font/opensans_regular"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_18sp"
                        android:gravity="center"
                        android:textColor="@color/gold"
                        android:layout_margin="@dimen/_12dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:text="@string/goldcointext"
                        android:fontFamily="@font/opensans_regular"

                        android:lineSpacingExtra="1dp"
                        android:textSize="@dimen/_16sp"
                        android:gravity="center_vertical"

                        android:textColor="@color/gold"
                        android:layout_marginBottom="@dimen/_12dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_25dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_64dp"
                        android:layout_height="@dimen/_64dp"
                        android:src="@drawable/ic_silver"
                        android:minHeight="@dimen/_100dp"
                        android:layout_marginRight="@dimen/_10dp"
                        />
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:id="@+id/txt_silvercoins"
                        android:text="Silver Coins"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_18sp"

                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/_12dp"
                        android:textStyle="bold"
                        android:textColor="@color/silverColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:text="@string/silverdata"
                        android:fontFamily="@font/opensans_regular"

                        android:lineSpacingExtra="1dp"
                        android:textSize="@dimen/_16sp"
                        android:textColor="@color/silverColor"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_12dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_25dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_64dp"
                        android:layout_height="@dimen/_64dp"
                        android:src="@drawable/box_image"
                        android:minHeight="@dimen/_100dp"
                        android:layout_marginRight="@dimen/_10dp"
                        />
                    <com.tutorix.tutorialspoint.views.CustomTextview
                        android:id="@+id/txt_howtoredeam"
                        android:text="How to redeem coins?"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_18sp"

                        android:gravity="center_vertical"
                        android:layout_margin="@dimen/_12dp"
                        android:textStyle="bold"
                        android:textColor="@color/blu_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <com.tutorix.tutorialspoint.views.CustomTextview
                    android:text="@string/keeperaning"
                    android:fontFamily="@font/opensans_regular"

                    android:lineSpacingExtra="1dp"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/blu_color"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_12dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/howtoredeemrewards"
                android:textColor="@color/rewardwincolor"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@color/transparent"
                android:textSize="@dimen/_16sp"
                android:visibility="gone"
                android:fontFamily="@font/opensans_regular"
                />
            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_redeem"
                android:text="@string/howtoreemtext"
                android:fontFamily="@font/opensans_regular"
                android:visibility="gone"
                android:textSize="@dimen/_18sp"
                android:textColor="@color/silverColor"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_12dp"

                android:letterSpacing=".01"
                android:lineSpacingExtra="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
         </LinearLayout>
    </ScrollView>


</RelativeLayout>