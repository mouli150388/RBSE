                                            android:layout_margin="5dp"

                                            android:transitionName="trans"
                                            app:srcCompat="@drawable/ic_maths" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/mathematics"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                    <!-- Physics Layout -->
                                    <LinearLayout
                                        android:id="@+id/lnr_j_phy"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_phy_background"

                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_j_phy"
                                            style="@style/MaterialAnimations"
                                            android:layout_width="60dp"
                                            android:layout_height="70dp"
                                            android:layout_margin="5dp"
                                            android:transitionName="trans"
                                            app:srcCompat="@drawable/ic_physics" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/physics"

                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>


                                </LinearLayout>

                                <!-- Maths & Biology -->
                                <LinearLayout
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="@dimen/_8dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="@dimen/_8dp"

                                    android:orientation="horizontal">
                                    <!-- Chemistry Layout-->
                                    <LinearLayout
                                        android:id="@+id/lnr_j_che"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_che_background"

                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_j_che"
                                            android:layout_width="60dp"
                                            android:layout_height="70dp"


                                            android:layout_margin="5dp"
                                            android:transitionName="trans"

                                            app:srcCompat="@drawable/ic_chemistry" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/chemistry"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>
                                    <!-- Biology Layout-->
                                    <LinearLayout
                                        android:id="@+id/lnr_j_test"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_bio_background"

                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_j_test"
                                            android:layout_width="60dp"
                                            android:layout_height="70dp"

                                            android:layout_margin="5dp"
                                            android:transitionName="trans"


                                            app:srcCompat="@drawable/ic_iit_jee_test" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/test_series"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>
                            <!--// NEET -->
                            <LinearLayout
                                android:id="@+id/lnr_neet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"

                                    android:layout_marginStart="@dimen/_8dp"
                                    android:layout_marginEnd="@dimen/_8dp"
                                    android:orientation="horizontal">
                                    <!-- Maths Layout -->

                                    <LinearLayout
                                        android:id="@+id/lnr_n_phy"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_phy_background"
                                        android:gravity="center"
                                        android:orientation="vertical"

                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_n_phy"
                                            android:layout_width="55dp"
                                            android:layout_height="70dp"

                                            android:layout_margin="5dp"

                                            android:transitionName="trans"
                                            app:srcCompat="@drawable/ic_physics" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/physics"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                    <!-- Physics Layout -->
                                    <LinearLayout
                                        android:id="@+id/lnr_n_che"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_che_background"

                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_n_che"
                                            android:layout_width="60dp"
                                            android:layout_height="70dp"


                                            android:layout_margin="5dp"
                                            android:transitionName="trans"

                                            app:srcCompat="@drawable/ic_chemistry" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/chemistry"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>


                                </LinearLayout>

                                <!-- Maths & Biology -->
                                <LinearLayout
                                    android:layout_width="300dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="@dimen/_8dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="@dimen/_8dp"

                                    android:orientation="horizontal">
                                    <!-- Chemistry Layout-->
                                    <LinearLayout
                                        android:id="@+id/lnr_n_bio"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_bio_background"

                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_n_bio"
                                            android:layout_width="60dp"
                                            android:layout_height="70dp"


                                            android:layout_margin="5dp"
                                            android:transitionName="trans"

                                            app:srcCompat="@drawable/ic_biology" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:clickable="false"
                                            android:fontFamily="@font/opensans_regular"
                                            android:gravity="center"
                                            android:text="@string/biology"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white" />
                                    </LinearLayout>
                                    <!-- Biology Layout-->
                                    <LinearLayout
                                        android:id="@+id/lnr_n_test"
                                        android:layout_width="@dimen/_0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/home_math_background"

                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="8dp">

                                        <ImageView
                                            android:id="@+id/txt_n_test"
                                            android:layout_width="60dp"
                                            android:layout_height="70dp"

                                            android:layout_margin="5dp"
                                            android:transitionName="trans"


                                            app:srcCompat="@drawable/ic_neet_test" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
