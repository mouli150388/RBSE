<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dsw.DSWActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:layout_margin="1dp"

        app:srcCompat="@drawable/dsw_test" />

   <!-- <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/transparent"
        android:layout_height="match_parent">-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"

        >
       <!-- <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="24dp"
                android:layout_height="25dp"
android:layout_marginLeft="@dimen/_16dp"
android:layout_marginTop="@dimen/_16dp"
                android:tint="@color/dsw_color"
                android:src="@drawable/ic_left_arrow"></ImageView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_40dp"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                android:gravity="center">

                <com.tutorix.tutorialspoint.views.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_10dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="2dp"

                    android:padding="@dimen/_5dp"
                    android:text="@string/dsw_str1"
                    android:textColor="@color/dsw_color"
                    android:textSize="@dimen/_32dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:elevation="@dimen/_32dp"
                    android:src="@drawable/ic_dsw_logo" />

            </LinearLayout>

            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_dsw_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/opensans_regular"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"

                android:text="@string/dsw_str2"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />


                <ImageView
                    android:id="@+id/img_click"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:elevation="@dimen/_32dp"
                    android:src="@drawable/ic_dsw_logo2" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:padding="@dimen/_15dp"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                app:cardCornerRadius="@dimen/_32dp">

                <LinearLayout
                    android:id="@+id/lnr_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/ic_check_result_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/_5dp">

                        <com.tutorix.tutorialspoint.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkyourresult"
                            android:textColor="@color/dsw_color"
                            android:fontFamily="@font/opensans_regular"
                            android:textSize="@dimen/_18sp" />

                        <com.tutorix.tutorialspoint.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/downloadyourdsw" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_arrow"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sp"
                android:padding="@dimen/_15dp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_16sp"
                android:layout_marginRight="@dimen/_16sp"
                app:cardCornerRadius="@dimen/_32dp">

                <LinearLayout
                    android:id="@+id/lnr_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_online_test_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/_5dp">

                        <com.tutorix.tutorialspoint.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/taketheonlinetest"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/dsw_color"
                            android:textSize="@dimen/_18sp" />

                        <com.tutorix.tutorialspoint.views.CustomTextview
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_height="wrap_content"
                            android:text="@string/downloadyourdsw" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"

                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_arrow"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.tutorix.tutorialspoint.views.CustomTextview
                android:id="@+id/txt_clickhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sp"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="@dimen/_16sp"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/_16sp"
                android:layout_marginBottom="@dimen/_16sp"
                android:text="@string/gotadoubtclick"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>
      <!--  </androidx.cardview.widget.CardView>-->


    </ScrollView>

   <!-- </androidx.cardview.widget.CardView>-->
