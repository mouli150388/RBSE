<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@drawable/activstion_background"
    tools:context=".ActivationResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="@dimen/_30sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/opensans_regular"
            android:text="Congratulations"
            />
        <ImageView
            android:id="@+id/img_animate"
            android:layout_width="@dimen/gif_200"
            android:layout_height="@dimen/gif_200" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="@dimen/_18sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/youractivationsucc"
            />
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/clear_drawable"
            android:layout_centerHorizontal="true"
            android:minEms="8"

            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_20dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/contin"
            android:textColor="@color/white"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>