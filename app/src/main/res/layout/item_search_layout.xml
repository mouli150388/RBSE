<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4dp"
        android:padding="@dimen/_8dp"
        android:background="@drawable/search_background_drawable"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:padding="@dimen/_8dp"
            android:tint="#D2D2D2"
            android:src="@drawable/play_track"
            android:background="@drawable/circle_grey"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_3dp"
            android:contentDescription="@string/app_name"

            /><!--
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/_1dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/logo"

            android:clickable="false"
            android:layout_centerVertical="true"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:fontFamily="@font/opensans_regular"
                android:layout_toEndOf="@+id/logo"
                android:clickable="false"
                android:text="Chapter Name"
                android:textColor="@color/subtitle"
                android:textStyle="bold"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/chapter_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chapter_name"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:clickable="false"
                android:text="5 Videos | 20 Minutes | 50 Questions"
                android:textColor="@color/subtitle"
                android:textSize="12sp" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>