<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activstion_background"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5dp"
                    android:gravity="top|center_horizontal"
                    android:fontFamily="@font/opensans_regular"
                    android:padding="10dp"
                    android:text="@string/settings"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_text_size" />
            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/_5dp">

        <com.tutorix.tutorialspoint.views.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:padding="@dimen/_5dp"
            android:text="@string/button_effects"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/menu_activity_text"
            android:layout_weight="1"
            android:textSize="@dimen/_18sp" />
        <Switch
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:padding="@dimen/_5dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/ic_right_back"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:background="@color/new_color_background" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="@dimen/_5dp">

        <com.tutorix.tutorialspoint.views.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:padding="@dimen/_5dp"
            android:text="@string/quiz_effects"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/menu_activity_text"
            android:layout_weight="1"
            android:textSize="@dimen/_18sp" />
        <Switch
            android:id="@+id/quiz_switch"
            android:layout_width="wrap_content"
            android:padding="@dimen/_5dp"
            android:layout_gravity="center_vertical|right"
            app:srcCompat="@drawable/ic_right_back"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2dp"
        android:background="@color/new_color_background" />
        <Button
            android:id="@+id/btn_clear_video_setngs"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_16sp"
            android:background="@drawable/login_button"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"
            android:paddingLeft="@dimen/_16sp"
            android:paddingRight="@dimen/_16sp"
            android:text="@string/clear_player_settings"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>