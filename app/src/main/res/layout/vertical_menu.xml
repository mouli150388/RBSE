<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="2">

        <LinearLayout

            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:gravity="center_vertical|right"
            android:rotation="30"
            android:clickable="false"
            android:layout_margin="1dp"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="@dimen/_8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_left"
                    android:layout_width="@dimen/img_height"

                    android:scaleType="centerInside"
                    android:layout_height="@dimen/img_height" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:elevation="@dimen/_8dp"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_name_left"
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:text="RUPABANHI"
                    android:gravity="right"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_gravity="right"
                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_sbjct_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="BIOLOGY"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:padding="3dp"
                    android:textColor="@color/bio_background"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnr_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:gravity="center_vertical|end"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:elevation="@dimen/_8dp"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_name_right"
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:text="RUPABANHI"
                    android:fontFamily="@font/opensans_regular"
                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_sbjct_right"
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:text="BIOLOGY"
                    android:padding="3dp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/bio_background"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical|left"
            android:rotation="-30"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="@dimen/_8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="@dimen/img_height"

                    android:scaleType="centerInside"
                    android:layout_height="@dimen/img_height" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:contentDescription="Video"
        android:scaleType="centerCrop"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:visibility="gone"
        android:fontFamily="@font/opensans_regular"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textIsSelectable="true" />
</LinearLayout>