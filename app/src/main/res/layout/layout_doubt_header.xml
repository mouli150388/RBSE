<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_4dp"
            android:background="@drawable/search_background_drawable"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnr_header_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#59D2D2D2"
                android:gravity="center_vertical"

                android:padding="@dimen/_8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_qtn_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_doubt_profile_user"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_q_usr_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:padding="5dp"

                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_q_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:padding="2dp"
                        android:textColor="@color/color_dashText"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_excercies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_12dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp"

                android:visibility="gone" />


            <com.tutorix.tutorialspoint.views.CustomWebview
                android:id="@+id/txt_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"

                android:scrollbarSize="@dimen/_1dp"
                android:padding="2dp"
                />

            <LinearLayout
                android:id="@+id/lnr_view_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_12dp"
                android:layout_marginTop="@dimen/_8dp"
                android:background="#B7EEEEEE"
                android:layout_margin="@dimen/_2dp"
                android:paddingBottom="@dimen/_8dp"
                android:paddingTop="@dimen/_8dp"
                android:orientation="vertical">
                <!--
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#ABD2D2D2"
                                app:strokeWidth="@dimen/_1dp"
                                app:strokeColor="@color/colorPrimary"
                                android:layout_marginLeft="@dimen/_16dp"
                                app:contentPadding="@dimen/_5dp">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txt_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp" />

                    <TextView
                        android:id="@+id/txt_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp" />
                    <TextView
                        android:id="@+id/txt_view"
                        android:layout_width="wrap_content"
                        android:drawableStart="@drawable/ic_eye"
                        android:drawablePadding="@dimen/_2dp"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_16dp"
                        android:layout_below="@+id/tvQuestionDescription"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_10sp" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/txt_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_3dp"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp" />


                <!-- </com.google.android.material.card.MaterialCardView>
           -->  </LinearLayout>
        </LinearLayout>

       <!-- <View android:layout_height=".8dp" android:layout_width="match_parent"  android:background="@color/colorPrimary"/>
-->

    <TextView
        android:id="@+id/txt_solutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sp"
        android:text="SOLUTIONS"
        android:layout_margin="@dimen/_5dp"
        android:textAllCaps="true"
        />


    <LinearLayout
        android:id="@+id/lnr_notanswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/_200dp"
        android:layout_marginBottom="?attr/actionBarSize"

        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="Not Answered yet"
            android:textColor="#AAAAAA"
            android:textSize="18sp"

            />

    </LinearLayout>

</LinearLayout>