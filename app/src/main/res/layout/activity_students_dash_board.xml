<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".classes.StudentsDashBoardActivity">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/banner_quiz_height"
              android:background="@drawable/top_main_background">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_centerHorizontal="true"
                                  android:layout_margin="@dimen/_5dp"
                                  android:gravity="top|center_horizontal"
                                  android:fontFamily="@font/opensans_regular"
                                  android:padding="10dp"
                                  android:text="@string/student_dashboard"
                                  android:textColor="@color/white"
                                  android:textSize="@dimen/header_text_size" />
                    </androidx.appcompat.widget.Toolbar>





          </RelativeLayout>
          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/_16dp"
              android:paddingRight="@dimen/_16dp"
              >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_left"
                        android:background="@drawable/login_editbackground"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content">
                              <Spinner
                                  android:id="@+id/spinner_city"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:minHeight="40dp"
                                  android:layout_centerVertical="true"

                                  />

                              <ImageView
                                  android:layout_width="@dimen/_12dp"
                                  android:layout_alignParentRight="true"
                                  android:layout_margin="@dimen/_5dp"
                                  android:layout_centerVertical="true"
                                  android:layout_height="@dimen/_12dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_left"
                        android:background="@drawable/login_editbackground"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content">
                              <Spinner
                                  android:id="@+id/spinner_branch"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:minHeight="40dp"
                                  android:layout_centerVertical="true"

                                  />

                              <ImageView
                                  android:layout_width="@dimen/_12dp"
                                  android:layout_alignParentRight="true"
                                  android:layout_margin="@dimen/_5dp"
                                  android:layout_centerVertical="true"
                                  android:layout_height="@dimen/_12dp" />
                    </RelativeLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_marginLeft="@dimen/margin_left"
              android:layout_marginRight="@dimen/margin_left"
              android:visibility="visible"
              android:background="@drawable/login_editbackground"
              android:layout_marginTop="30dp"
              android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinner_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_centerVertical="true"

                        />

                    <ImageView
                        android:layout_width="@dimen/_12dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/_12dp" />
          </RelativeLayout>



          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_marginLeft="@dimen/margin_left"
              android:layout_marginRight="@dimen/margin_left"
              android:background="@drawable/login_editbackground"
              android:layout_marginTop="30dp"
              android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spinner_batch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_centerVertical="true"

                        />

                    <ImageView
                        android:layout_width="@dimen/_12dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_5dp"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/_12dp" />
          </RelativeLayout>


                    <TextView
                        android:id="@+id/txt_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_30dp"
                        android:background="@drawable/login_button"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/opensans_regular"
                        android:foreground="@drawable/ripple_radius"
                        android:gravity="center"

                        android:minEms="8"
                        android:text="@string/contin"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

          </LinearLayout>
          </ScrollView>
</LinearLayout>