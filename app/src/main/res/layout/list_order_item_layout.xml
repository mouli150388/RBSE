<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15dp"
    app:cardElevation="@dimen/_5dp"
    android:layout_margin="@dimen/_5dp"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_2dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="@dimen/_5dp"
            android:text=""
            android:elevation="@dimen/_5dp"
            android:textSize="@dimen/_16sp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/_10dp">


            <TextView
                android:id="@+id/order_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2dp"
                android:layout_toLeftOf="@+id/img_item"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:text="" />
            <TextView
                android:id="@+id/order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2dp"
                android:layout_toLeftOf="@+id/img_item"
                android:fontFamily="@font/opensans_regular"
                android:layout_below="@+id/order_txt"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:text="" />
            <TextView
                android:id="@+id/order_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2dp"
                android:layout_toLeftOf="@+id/img_item"
                android:fontFamily="@font/opensans_regular"
                android:layout_below="@+id/order_date"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:text="" />



            <ImageView
                android:id="@+id/img_item"
                android:layout_width="@dimen/_30dp"
                android:layout_height="50dp"

                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5dp" />
            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/opensans_regular"
                android:layout_below="@+id/img_item"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                android:text="" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>