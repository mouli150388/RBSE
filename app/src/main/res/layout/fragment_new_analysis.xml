<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_quiz_height"
        android:background="@drawable/top_main_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_horizontal"
            android:text="@string/performance_analysis"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sp"
            android:visibility="invisible" />

        <RadioGroup
            android:id="@+id/radi_grp_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/quiz_margin"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/quiz_margin"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_selector_phy_p"
                android:button="@null"
                android:checked="true"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:text="@string/progress"
                android:textColor="@drawable/color_selector"
                android:textSize="@dimen/header_text_size" />
            <!--  <TextView
                  android:layout_width="1dp"
                  android:layout_height="10dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:background="@color/white"
                  />-->
            <RadioButton
                android:id="@+id/btn_performance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector_phy_p"
                android:button="@null"
                android:checked="false"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:text="@string/Performance"
                android:textColor="@drawable/color_selector"
                android:textSize="@dimen/header_text_size" />
        </RadioGroup>

        <include
            android:id="@+id/view"
            layout="@layout/cloude_image_view" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

    </FrameLayout>


</RelativeLayout>