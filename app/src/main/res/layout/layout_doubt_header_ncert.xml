<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_4dp"
           app:cardCornerRadius="@dimen/_4dp"
            android:orientation="vertical">




            <TextView
                android:id="@+id/txt_excercies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_12dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp"

                android:visibility="gone" />


            <com.tutorix.tutorialspoint.views.CustomWebview
                android:id="@+id/txt_q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_40dp"
                android:layout_marginBottom="@dimen/_5dp"

                android:scrollbarSize="@dimen/_1dp"
                android:padding="2dp"
                />



        </androidx.cardview.widget.CardView>

       <!-- <View android:layout_height=".8dp" android:layout_width="match_parent"  android:background="@color/colorPrimary"/>
-->

    <TextView
        android:id="@+id/txt_solutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sp"
        android:text="SOLUTIONS"
        android:layout_margin="@dimen/_5dp"
        android:textAllCaps="true"
        />


    <LinearLayout
        android:id="@+id/lnr_notanswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minHeight="@dimen/_200dp"
        android:layout_marginBottom="?attr/actionBarSize"

        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="Not Answered yet"
            android:textColor="#AAAAAA"
            android:textSize="18sp"

            />

    </LinearLayout>

</LinearLayout>