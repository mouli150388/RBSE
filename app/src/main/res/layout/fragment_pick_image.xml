<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <com.tutorix.tutorialspoint.views.CustomTextview
        android:layout_width="match_parent"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_18sp"
        android:text="Select any one image"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/opensans_regular"
        android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_16dp"
    >
    <ImageView
        android:id="@+id/imgone"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        app:layout_constraintEnd_toStartOf="parent"
        android:scaleType="fitXY"
        android:background="@drawable/retake_button"
        android:padding="@dimen/_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgTwo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/retake_button"
        android:padding="@dimen/_8dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgone" />
    <ImageView
        android:id="@+id/imgThree"
        android:layout_width="match_parent"
        android:background="@drawable/retake_button"
        android:padding="@dimen/_8dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTwo" />
</LinearLayout>
</LinearLayout>