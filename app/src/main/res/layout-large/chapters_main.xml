<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5dp"

    android:layout_marginRight="@dimen/_2dp"
    android:layout_marginBottom="@dimen/_10dp"
    android:elevation="@dimen/_8dp"


    app:cardCornerRadius="@dimen/_13dp">
    <LinearLayout
        android:id="@+id/lnr_card"
        android:layout_width="match_parent"
        android:background="@drawable/ic_chemistry_card_background"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_3dp"
            android:contentDescription="@string/app_name"

            /><!--
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/_1dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/logo"
            android:minHeight="@dimen/_60dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8dp"
                android:fontFamily="@font/opensans_regular"
                android:layout_toEndOf="@+id/logo"
                android:clickable="false"
                android:text="Chapter Name"
                android:textColor="@color/che_background"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chapter_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chapter_name"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:clickable="false"
                android:text="5 Videos | 20 Minutes | 50 Questions"
                android:textColor="@color/subtitle"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/chapter_quize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chapter_name"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:clickable="false"
                android:visibility="gone"
                android:text="5 Videos | 20 Minutes | 50 Questions"
                android:textColor="@color/subtitle"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView >