<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/ic_tools_bg"
    tools:context=".fragments.ToolsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="@dimen/_40dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginBottom="@dimen/_55dp"
            android:clickable="false"
            android:fontFamily="@font/notoserif_bold"
            android:gravity="start"
            android:text="@string/tools"
            android:textSize="@dimen/_50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_left_quiz"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/lnr_complete"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:layout_marginRight="@dimen/_10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_complete"
                    android:layout_width="80dp"

                    android:layout_height="80dp"

                    android:elevation="10dp"
                    app:srcCompat="@drawable/ic_tool_completed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:clickable="false"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/completed_tasks_t" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_bookmark"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bookmark"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:elevation="10dp"
                    app:srcCompat="@drawable/ic_tool_bookmark" />

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/bookmark" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_left_quiz"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/lnr_notes"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:layout_marginRight="@dimen/_10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_feedback"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:elevation="10dp"
                    app:srcCompat="@drawable/ic_tool_notes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5dp"
                    android:clickable="false"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/yournotes" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnr_doubts"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_doubt"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:elevation="10dp"

                    app:srcCompat="@drawable/ic_thumbtack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_margin="@dimen/_5dp"
                    android:text="@string/activity" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/tools"
        android:textColor="#494F5E"
        android:visibility="gone"
        android:textSize="@dimen/_35sp"
        android:textStyle="bold" />


</FrameLayout>