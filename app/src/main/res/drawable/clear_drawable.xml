<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="20dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="0.1dp"
                android:color="@color/physics" />
            <solid android:color="@color/chapter_text_color"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle">
            <corners android:radius="40dp" />
           <!-- <solid android:color="@color/chapter_text_color"/>-->
            <gradient android:startColor="#F79646"
                android:endColor="#E2BC9D"
                android:centerColor="#E0B18A"

                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="0.1dp"
                android:color="@color/physics" />
        </shape>
    </item>
</selector>
