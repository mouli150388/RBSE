<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/secondaryProgress">

        <shape

            android:innerRadiusRatio="2.5"
            android:shape="ring"
            android:thickness="2dp"
            android:useLevel="true">


            <gradient

                android:centerColor="@color/progress_circle_default"

                android:endColor="@color/progress_circle_default"

                android:startColor="@color/progress_circle_default"
                android:useLevel="false"
                android:type="sweep" />

        </shape>

    </item>

    <item android:id="@android:id/progress">

        <rotate

            android:fromDegrees="270"

            android:pivotX="50%"

            android:pivotY="50%"

            android:toDegrees="270">

            <shape

                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thickness="2dp"
                android:useLevel="true">

                <rotate

                    android:fromDegrees="0"

                    android:pivotX="50%"

                    android:pivotY="50%"

                    android:toDegrees="360" />

                <gradient

                    android:centerColor="@color/math_background"

                    android:endColor="@color/math_background"

                    android:startColor="@color/math_background"

                    android:type="sweep" />

            </shape>

        </rotate>

    </item>

</layer-list>
