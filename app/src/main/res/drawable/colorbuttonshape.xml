<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="false">
<shape
    android:shape="oval">
    <corners android:radius="14dp" />
   <!-- <gradient
        android:angle="45"
        android:centerColor="#f2af98"
        android:centerX="35%"
        android:endColor="#f2af98"
        android:startColor="#f2af98" />-->
    <solid android:color="#e19c85"/>
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <stroke
        android:width="1dp"
        android:color="#454444" />
</shape>
</item>

<item android:state_checked="true">
<shape
    android:shape="oval">
    <corners android:radius="14dp" />
    <gradient
        android:angle="45"
        android:centerColor="#FFFFFF"
        android:centerX="35%"
        android:endColor="#FFFFFF"
        android:startColor="#FFFFFF" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <stroke
        android:width="1dp"
        android:color="#f26a6a" />
</shape>
</item>
</selector>